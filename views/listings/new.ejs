<% layout("layouts/boilerplate.ejs") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <body>
      <br /><br />
      <h3>Create new listing here:</h3>

      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listings[title]"
            placeholder="Add a catchy Title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">description</label>
          <textarea
            type="text"
            name="listings[description]"
            placeholder="Enter description here"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description shoudn't blank</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">upload Image </label><br />
          <input type="file" name="listings[image]" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-8">
            <label for="locatoin" class="form-label">country</label>
            <input
              type="text"
              name="listings[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listings[price]"
              placeholder="10000"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="locatoin" class="form-label">Location</label>
          <input
            type="text"
            name="listings[location]"
            placeholder="Enter location here"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button><br /><br /><br />
      </form>
    </body>
  </div>
</div>
